<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30pt"
    android:background="@color/grey"
    android:layout_centerHorizontal="true"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player_view_img"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6pt"
        android:src="@drawable/crop_20a7dc7fbd29d679b456fa0f77bd9525d" />

    <TextView
        android:layout_width="35pt"
        android:layout_height="11pt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6pt"
        android:layout_toEndOf="@+id/player_view_img"
        android:text="@string/title"
        android:textSize="8pt"
        android:typeface="sans"
        android:id="@+id/player_view_title"/>

    <TextView
        android:id="@+id/player_view_time"
        android:layout_width="17pt"
        android:layout_height="8pt"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/player_view_img"
        android:layout_marginEnd="35dp"
        android:text="@string/time"
        android:textColor="@color/jinse"
        android:textSize="6pt" />

    <SeekBar
        android:id="@+id/player_view_seekbar"
        android:layout_width="124pt"
        android:layout_height="1pt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/player_view_img"
        android:layout_marginStart="10pt"
        android:progressDrawable="@drawable/seekbar_bg" />
</RelativeLayout>
